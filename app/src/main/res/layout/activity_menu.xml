<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:orientation="vertical"
    android:background="@drawable/menu_page">

    <Button
        android:id="@+id/toParking"
        android:layout_width="255dp"
        android:layout_height="85dp"
        android:text="To Page: Parking"
        android:textSize="30sp"
        android:fontFamily="casual"
        android:layout_marginTop="70dp"
        />
    <Button
        android:id="@+id/toFood"
        android:layout_width="255dp"
        android:layout_height="50dp"
        android:text="To Page: Food Services"
        android:textSize="30sp"
        android:fontFamily="casual"
        />

    <Button
        android:id="@+id/toDrone"
        android:layout_width="255dp"
        android:layout_height="50dp"
        android:text="To Page: Viewing"
        android:textSize="30sp"
        android:fontFamily="casual"
        />

    <Button
        android:id="@+id/toFacts"
        android:layout_width="255dp"
        android:layout_height="60dp"
        android:text="To Page: Float Facts"
        android:textSize="30sp"
        android:fontFamily="casual"
        />

    <Button
        android:id="@+id/toTiming"
        android:layout_width="255dp"
        android:layout_height="48dp"
        android:text="To Page: Timing"
        android:textSize="30sp"
        android:fontFamily="casual"
        />

    <Button
        android:id="@+id/toSound"
        android:layout_width="255dp"
        android:layout_height="60dp"
        android:text="To Page: Sound Control"
        android:textSize="28sp"
        android:fontFamily="casual"
        />


</LinearLayout>